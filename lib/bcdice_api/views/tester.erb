<!doctype html>
<html lang="ja">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>BCDice Tester</title>
    <style>
      h3 {
        margin-top: 2rem;
        margin-bottom: 1rem;
      }
      .pre {
        white-space: pre-wrap;

        padding: 1rem;
        background-color: #f5f5f5;
        border-radius: 4px;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
      <div class="container">
        <span class="navbar-brand mb-0 h1">BCDice Tester</span>
      </div>
    </nav>
    <div class="container">
      <div class="row">
      <div class="col-md">
        <h3>ヘルプ：<%= @title %></h3>
        <pre class="pre">
<%= @help %>
        </pre>
      </div>
      <div class="col-md">
        <h3>コマンド</h3>
        <form>
          <div class="form-group">
            <div class="input-group mb-3">
              <input type="text" id="game" name="game" hidden  value="<%= @id %>">
              <input type="text" id="command" name="command" class="form-control form-control-lg" placeholder="1D6" value="<%= @command %>">
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="send">Send (Enter)</button>
              </div>
            </div>
          </div>
        </form>
        <% if @result %>
        <h3>出力 <small><%= @command %></small></h3>
        <pre class="pre">
<%= @result[:text] %>
        </pre>
        <h4>ダイス</h4>
        <pre class="pre">
<%= @result[:rands] %>
        </pre>
        <% end %>
      </div>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>
